import java.util.Scanner;

public class main {

	public static void main(String[] args) throws Exception {
		int mes, dias;
		mes = lerMes();
		dias = numeroDeDias(mes);
		System.out.printf("O mês " + mes + " tem " + dias + " dias");
		
	}
	
	public static int lerMes() {
		// este método lê o nº do mês
		int mes;
		Scanner LerS = new Scanner(System.in);
		
		do {
			System.out.println("Qual o mês?");
			mes = LerS.nextInt();
		} while (mes < 1 || mes > 12)
		
		return mes;
		
	}
	
	public static int numeroDeDias(int mes) {
	// este método recebe o número dum mês e retorna o seu número de dias
	
		int nrDias;
		
		if (mes == 1 || mes == 3 || mes == 5 || mes == 7 || mes == 8 || mes == 10 || mes == 12) {
			nrDias = 31;
		} else if (mes == 4 || mes == 6 || mes == 9 || mes == 11) {
			nrDias = 30;
		} else {
			nrDias = 28;
		}
		
		return nrDias;
		
	}

}
